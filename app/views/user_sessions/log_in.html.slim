html class="text-center pt-1 mb-5 pb-1"
  head
    title = 'Cash Register'
  body
    .div  class="form-outline mb-4"
      h1 = 'Beer Tap Counter'
    row
      col
        div = form_for :user, url:user_sessions_path , method:'POST', html: { multipart: true }, authenticity_token: true, remote: true do |f|

          .div  class="form-outline mb-4"
            - title = 'Username'
            = f.text_field :name,  placeholder: title, title: title, required: true

          .div  class="form-outline mb-4"
            - title = 'Password'
            = f.password_field :password, placeholder: title, title: title, required: true

          .div  class="form-outline mb-4"
            = f.submit 'Enter', class: 'btn btn-primary'
